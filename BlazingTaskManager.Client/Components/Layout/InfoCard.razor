
@code {
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Value { get; set; }
    [Parameter] public string? Color { get; set; }
}

<div class="flex items-center gap-3 w-full">
    @{
        var _bgColour = Color ?? "bg-white";
        var _label = "  " + Label;
    }
    <div class="w-2 md:w-2 h-3 md:h-5 @_bgColour rounded-full">
    </div>
    <p class="text-xs md:text-[12px] text-white">
        <span class="text-sm md:text-[16px] text-white font-bold"> @Value</span>@_label
    </p>
</div>

